<div class="container py-5 d-flex flex-column p-2 bd-highlight align-items-center">
  <h1>URL Shortener</h1>
  <i class="fas fa-link fa-10x" style="color:#80D3F2"></i>

  {{#if shorturl}}
  <div class="alert" role="alert">
    <span class="mr-2">Success! Please Use this link</span> <code>{{website}}{{shorturl}}</code>
  </div>
  {{/if}}

  {{#unless shorturl}}
  <form method="POST" action="/" class="text-center">
  <input type="text" name="rawurl" value="{{rawurl}}" class="form-control my-3" placeholder="Input URL here">
  <button type="submit" class="btn btn-outline-info">Shorten</button>
  </form>
  {{/unless}}
</div>